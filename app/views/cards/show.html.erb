
<h2>Guess the Answer</h2>
<h3 style="white-space: pre-wrap"><%= @card.question %></h3>

<% if @attempted %>
  <h4> The correct answer was:</h4>
  <p><%= @card.answer %></p>
  <%= link_to 'Next Question', deck_round_path(@deck.id, @round.id) %>
<% else %>
  <%= form_with model: [@card, @guess] do |form| %>
    <%= form.label :answer %>
    <%= form.text_field :answer %>
    <%= form.submit %>
  <% end %>

<% end %>
